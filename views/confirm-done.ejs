<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Verifikasi Laporan Selesai</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="/css/dashboard.css" />
</head>
<body class="bg-gray-50">
  <div class="flex min-h-screen">
    <%- include('partials/sidebar') %>

    <main class="flex-1 p-6">
      <h1 class="text-2xl font-bold mb-6">Verifikasi Laporan Selesai</h1>

      <!-- Search -->
      <form method="GET" action="/confirm-done" class="mb-4">
        <input type="text" name="search" placeholder="Cari nama barang..." value="<%= searchQuery || '' %>" class="px-4 py-2 border border-gray-300 rounded w-64" />
        <button type="submit" class="px-4 py-2 ml-2 bg-blue-500 text-white rounded hover:bg-blue-600">Cari</button>
      </form>

      <!-- Filter Buttons -->
      <div class="flex gap-2 mb-4">
        <a href="/confirm-done"><button class="px-4 py-2 border border-gray-300 rounded hover:bg-gray-100 <%= activeFilter === 'all' ? 'bg-black text-white' : '' %>">All</button></a>
        <a href="/confirm-done/unverified"><button class="px-4 py-2 border border-gray-300 rounded hover:bg-gray-100 <%= activeFilter === 'unverified' ? 'bg-black text-white' : '' %>">Unverified</button></a>
        <a href="/confirm-done/verified"><button class="px-4 py-2 border border-gray-300 rounded hover:bg-gray-100 <%= activeFilter === 'verified' ? 'bg-black text-white' : '' %>">Verified</button></a>

        <!-- Dropdown -->
        <div class="relative ml-auto">
          <button id="dropdownButton" class="px-4 py-2 border border-gray-300 rounded hover:bg-gray-100">Filter âŒ„</button>
          <div id="dropdownMenu" class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-300 rounded shadow z-10">
            <a href="/confirm-done?<%= activeFilter ? 'filter=' + activeFilter + '&' : '' %>dropdown=lost"><button class="block w-full text-left px-4 py-2 hover:bg-gray-100 <%= currentDropdown === 'lost' ? 'bg-gray-200' : '' %>">Laporan Kehilangan</button></a>
            <a href="/confirm-done?<%= activeFilter ? 'filter=' + activeFilter + '&' : '' %>dropdown=found"><button class="block w-full text-left px-4 py-2 hover:bg-gray-100 <%= currentDropdown === 'found' ? 'bg-gray-200' : '' %>">Laporan Penemuan</button></a>
            <a href="/confirm-done?<%= activeFilter ? 'filter=' + activeFilter + '&' : '' %>dropdown=approved"><button class="block w-full text-left px-4 py-2 hover:bg-gray-100 <%= currentDropdown === 'approved' ? 'bg-gray-200' : '' %>">Approved</button></a>
            <a href="/confirm-done?<%= activeFilter ? 'filter=' + activeFilter + '&' : '' %>dropdown=denied"><button class="block w-full text-left px-4 py-2 hover:bg-gray-100 <%= currentDropdown === 'denied' ? 'bg-gray-200' : '' %>">Denied</button></a>
          </div>
        </div>
      </div>

      <!-- Laporan Grid -->
      <div class="grid gap-4">
        <% const laporanList = searchQuery ? laporanGabungan : (activeFilter === 'all' && !currentDropdown ? [...laporanBaru, ...laporanLama] : laporanGabungan); %>
        <% if (laporanList.length > 0) { %>
          <% laporanList.forEach(report => { %>
            <div class="shadow-md rounded-xl p-4 flex flex-col md:flex-row md:justify-between <%= report.status === 'Waiting for End Verification' ? 'bg-yellow-50 border-2 border-yellow-500' : 'bg-white' %>">
              <div class="flex gap-4">
                <img src="/<%= report.foto_barang %>" alt="Foto Barang" class="w-32 h-32 object-cover rounded-md" />
                <div>
                  <h3 class="text-lg font-semibold mb-1"><%= report.nama_barang %></h3>
                  <p class="text-sm"><strong><%= report.jenis_laporan %></strong></p>
                  <p class="text-sm text-gray-600">Lokasi: <%= report.lokasi %></p>
                  <p class="text-sm text-gray-600">Tanggal Kejadian: <%= report.tanggal_kejadian %></p>
                  <p class="text-sm text-gray-600 mb-2">Deskripsi: <%= report.deskripsi %></p>

                  <% if (report.status === 'Waiting for End Verification') { %>
                    <span class="inline-block text-xs px-2 py-1 bg-yellow-400 text-white rounded-full">Waiting for End Verification</span>
                  <% } else if (report.status === 'Rejected') { %>
                    <span class="inline-block text-xs px-2 py-1 bg-red-400 text-white rounded-full">Rejected</span>
                  <% } else if (report.status === 'Done') { %>
                    <span class="inline-block text-xs px-2 py-1 bg-green-500 text-white rounded-full">Done</span>
                  <% } %>
                </div>
              </div>
              <div class="flex flex-col gap-2 mt-4 md:mt-0 md:items-end">
                <div class="flex gap-2">
                  <!-- Approve -->
                  <form action="/approve-report/<%= report.id_laporan %>" method="POST">
                    <button type="submit" class="px-3 py-1 rounded text-white <%= report.status !== 'Waiting for End Verification' ? 'bg-gray-400 cursor-not-allowed' : 'bg-green-500 hover:bg-green-600' %>" <%= report.status !== 'Waiting for End Verification' ? 'disabled' : '' %>>Approve</button>
                  </form>
                  <!-- Denied -->
                  <form action="/denied-report/<%= report.id_laporan %>" method="POST">
                    <button type="submit" class="px-3 py-1 rounded text-white <%= report.status !== 'Waiting for End Verification' ? 'bg-gray-400 cursor-not-allowed' : 'bg-red-500 hover:bg-red-600' %>" <%= report.status !== 'Waiting for End Verification' ? 'disabled' : '' %>>Denied</button>
                  </form>
                </div>
                <a href="/laporan/detail/<%= report.id_laporan %>">
                  <button class="mt-2 px-3 py-1 border border-gray-400 rounded hover:bg-gray-100">See Details</button>
                </a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-gray-500">
            <% if (searchQuery) { %>
              Tidak ada laporan atas nama barang tersebut.
            <% } else { %>
              Tidak ada laporan ditemukan.
            <% } %>
          </p>
        <% } %>
      </div>
    </main>
  </div>

  <!-- Dropdown Script -->
  <script>
    document.getElementById("dropdownButton").addEventListener("click", () => {
      document.getElementById("dropdownMenu").classList.toggle("hidden");
    });
    window.addEventListener("click", function (e) {
      const button = document.getElementById("dropdownButton");
      const menu = document.getElementById("dropdownMenu");
      if (!button.contains(e.target) && !menu.contains(e.target)) {
        menu.classList.add("hidden");
      }
    });
  </script>
</body>
</html>
