<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Verifikasi Upload Laporan</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="flex">
      <!-- Include Sidebar -->
      <%- include('partials/sidebar') %>

      <!-- Main Content -->
      <main class="flex-1 p-6">
        <!-- Top Bar -->
        <div class="flex justify-between items-center mb-6">
          <div class="space-x-2">
            <button
              class="bg-gray-200 text-gray-800 py-2 px-4 rounded hover:bg-gray-300"
            >
              All
            </button>
            <button
              class="bg-gray-200 text-gray-800 py-2 px-4 rounded hover:bg-gray-300"
            >
              Unverified
            </button>
            <button
              class="bg-gray-200 text-gray-800 py-2 px-4 rounded hover:bg-gray-300"
            >
              Verified
            </button>
            <button
              class="bg-gray-200 text-gray-800 py-2 px-4 rounded hover:bg-gray-300"
            >
              Filter âŒ„
            </button>
          </div>
        </div>

        <!-- Card Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% if (reports && reports.length > 0) { %> <%
          reports.forEach(function(report) { %>
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="relative">
              <img
                src="/<%= report.foto_barang %>"
                alt="Foto Barang"
                class="w-full h-56 object-cover"
              />
              <div
                class="absolute top-4 left-4 bg-white bg-opacity-75 px-3 py-2 rounded"
              >
                <h3 class="text-lg font-semibold"><%= report.nama_barang %></h3>
              </div>
            </div>

            <div class="p-4">
              <p>
                <strong class="font-semibold"
                  ><%= report.jenis_laporan %></strong
                >
              </p>
              <p class="text-sm text-gray-600">Lokasi: <%= report.lokasi %></p>
              <p class="text-sm text-gray-600">
                Tanggal Kejadian: <%= report.tanggal_kejadian %>
              </p>
              <p class="text-sm text-gray-600">
                Deskripsi: <%= report.deskripsi %>
              </p>

              <p
                class="mt-2 inline-block px-4 py-2 text-sm rounded-full <%= report.status.toLowerCase().replace(/\s+/g, '-') %> bg-gray-200 text-gray-800"
              >
                <%= report.status %>
              </p>
            </div>

            <div class="flex justify-between p-4">
              <!-- Action buttons -->
              <div class="space-x-2">
                <form
                  action="/approve-report/<%= report.id_laporan %>"
                  method="POST"
                >
                  <button
                    class="bg-green-600 text-white py-1 px-4 rounded hover:bg-green-700 transition <%= report.status !== 'Waiting for upload verification' && report.status !== 'Upload verification rejected' ? 'opacity-50 cursor-not-allowed' : '' %>"
                  >
                    Approve
                  </button>
                </form>
                <form
                  action="/denied-report/<%= report.id_laporan %>"
                  method="POST"
                >
                  <button
                    class="bg-red-600 text-white py-1 px-4 rounded hover:bg-red-700 transition <%= report.status !== 'Waiting for upload verification' && report.status !== 'On progress' ? 'opacity-50 cursor-not-allowed' : '' %>"
                  >
                    Denied
                  </button>
                </form>
              </div>

              <!-- See Details Button -->
              <a href="/laporan/detail/<%= report.id_laporan %>">
                <button
                  class="bg-blue-600 text-white py-1 px-4 rounded hover:bg-blue-700 transition"
                >
                  See Details
                </button>
              </a>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p class="text-center text-gray-600 col-span-3">
            No reports available.
          </p>
          <% } %>
        </div>
      </main>
    </div>
  </body>
</html>
