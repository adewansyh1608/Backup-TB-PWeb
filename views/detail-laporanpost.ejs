<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Detail Laporan</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <main class="min-h-screen flex items-center justify-center p-6">
      <div
        class="bg-white rounded-xl shadow-lg p-8 w-full max-w-6xl mx-auto my-8"
      >
        <h3 class="text-2xl font-bold text-center text-gray-800 mb-6">
          Detail Laporan
        </h3>

        <!-- Foto Barang Section -->
        <div class="mb-6 flex justify-center">
          <div class="w-64 h-64 bg-gray-200 rounded-lg overflow-hidden">
            <img
              src="/<%= report.foto_barang %>"
              alt="Foto Barang"
              class="object-cover w-full h-full"
            />
          </div>
        </div>

        <!-- Nama Barang Section -->
        <div class="mb-6">
          <p class="text-2xl font-semibold text-center text-gray-900">
            <%= report.nama_barang || '-' %>
          </p>
        </div>

        <!-- Jenis Laporan Section -->
        <div class="mb-6">
          <p class="font-bold text-lg text-gray-700">Jenis Laporan:</p>
          <p><%= report.jenis_laporan || '-' %></p>
        </div>

        <!-- Status Section -->
        <div class="mb-6">
          <p class="font-bold text-lg text-gray-700">Status:</p>
          <p><%= report.status || '-' %></p>
        </div>

        <!-- Tanggal Kejadian Section -->
        <div class="mb-6">
          <p class="font-bold text-lg text-gray-700">Tanggal Kejadian:</p>
          <p>
            <%= new Date(report.tanggal_kejadian).toLocaleDateString('id-ID', {
            weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })
            || '-' %>
          </p>
        </div>

        <!-- Lokasi Section -->
        <div class="mb-6">
          <p class="font-bold text-lg text-gray-700">Lokasi:</p>
          <p><%= report.lokasi || '-' %></p>
        </div>

        <!-- Tanggal Laporan Section -->
        <div class="mb-6">
          <p class="font-bold text-lg text-gray-700">Tanggal Laporan:</p>
          <p>
            <%= new Date(report.tanggal_laporan).toLocaleDateString('id-ID', {
            weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })
            || '-' %>
          </p>
        </div>

        <!-- Deskripsi Section -->
        <div class="mb-6">
          <p class="font-bold text-lg text-gray-700">Deskripsi:</p>
          <p
            class="text-xl text-gray-700 overflow-hidden overflow-ellipsis whitespace-normal break-words"
          >
            <%= report.deskripsi || '-' %>
          </p>
        </div>

        <!-- Button Back to Dashboard and Claim Button -->
        <div class="mt-8 flex justify-between space-x-4">
          <!-- Button Back to Dashboard -->
          <div class="w-full sm:w-auto">
            <a
              href="/dashboard"
              class="inline-block w-full sm:w-auto px-8 py-3 text-white bg-gray-300 rounded-full font-semibold text-lg hover:bg-gray-400 transition duration-300"
            >
              Back
            </a>
          </div>

          <!-- Button Claim -->
          <div class="w-full sm:w-auto">
            <% if (report.status !== 'Claimed') { %>
            <form action="/claim" method="POST" class="mt-4 sm:mt-0">
              <input
                type="hidden"
                name="id_laporan"
                value="<%= report.id_laporan %>"
              />
              <button
                type="submit"
                class="inline-block w-full sm:w-auto px-8 py-3 text-white bg-green-600 rounded-full font-semibold text-lg hover:bg-green-700 transition duration-300"
              >
                Claim
              </button>
            </form>
            <% } else { %>
            <button
              class="inline-block w-full sm:w-auto px-8 py-3 text-white bg-gray-600 rounded-full cursor-not-allowed text-lg"
            >
              Claimed
            </button>
            <% } %>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
