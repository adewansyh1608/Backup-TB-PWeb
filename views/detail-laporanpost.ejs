<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Detail Laporan</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans antialiased">
    <div
      class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
    >
      <div class="max-w-4xl w-full bg-white shadow-2xl rounded-lg p-8">
        <!-- Heading -->
        <div class="text-center mb-8">
          <h1 class="text-5xl font-extrabold text-indigo-600 mb-4">
            Detail Laporan
          </h1>
          <p class="text-xl text-gray-600">
            Berikut adalah informasi lengkap tentang laporan Anda.
          </p>
        </div>

        <!-- Detail Laporan Card -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <div class="space-y-6">
            <!-- Foto Barang - Centered -->
            <div class="text-center">
              <img
                src="/<%= report.foto_barang %>"
                alt="foto barang"
                class="w-64 h-64 object-cover rounded-lg mx-auto"
              />
            </div>

            <!-- Nama Barang -->
            <div>
              <h2 class="text-3xl font-semibold text-indigo-600">
                Nama Barang
              </h2>
              <p class="text-xl text-gray-700"><%= report.nama_barang %></p>
            </div>

            <!-- Jenis Laporan -->
            <div>
              <h2 class="text-3xl font-semibold text-indigo-600">
                Jenis Laporan
              </h2>
              <p class="text-xl text-gray-700"><%= report.jenis_laporan %></p>
            </div>

            <!-- Status -->
            <div>
              <h2 class="text-3xl font-semibold text-indigo-600">Status</h2>
              <p class="text-xl text-gray-700"><%= report.status %></p>
            </div>

            <!-- Tanggal Kejadian -->
            <div>
              <h2 class="text-3xl font-semibold text-indigo-600">
                Tanggal Kejadian
              </h2>
              <p id="tanggal-kejadian" class="text-xl text-gray-700"></p>
            </div>

            <!-- Lokasi -->
            <div>
              <h2 class="text-3xl font-semibold text-indigo-600">Lokasi</h2>
              <p class="text-xl text-gray-700"><%= report.lokasi %></p>
            </div>

            <!-- Tanggal Laporan -->
            <div>
              <h2 class="text-3xl font-semibold text-indigo-600">
                Tanggal Laporan
              </h2>
              <p id="tanggal-laporan" class="text-xl text-gray-700"></p>
            </div>

            <!-- Deskripsi -->
            <div>
              <h2 class="text-3xl font-semibold text-indigo-600">Deskripsi</h2>
              <p
                class="text-xl text-gray-700 overflow-hidden overflow-ellipsis whitespace-normal break-words"
              >
                <%= report.deskripsi %>
              </p>
            </div>
          </div>
        </div>

        <!-- Button Back to Dashboard and Claim Button -->
        <div class="mt-8 flex justify-between space-x-4">
          <!-- Button Back to Dashboard -->
          <div class="w-full sm:w-auto">
            <a
              href="/dashboard"
              class="inline-block w-full sm:w-auto px-8 py-3 text-white bg-gray-300 rounded-full font-semibold text-lg hover:bg-gray-400 transition duration-300"
            >
              Back
            </a>
          </div>

          <!-- Button Claim -->
          <div class="w-full sm:w-auto">
            <% if (report.status !== 'Claimed') { %>
            <form action="/claim" method="POST" class="mt-4 sm:mt-0">
              <input
                type="hidden"
                name="id_laporan"
                value="<%= report.id_laporan %>"
              />
              <button
                type="submit"
                class="inline-block w-full sm:w-auto px-8 py-3 text-white bg-green-600 rounded-full font-semibold text-lg hover:bg-green-700 transition duration-300"
              >
                Claim
              </button>
            </form>
            <% } else { %>
            <button
              class="inline-block w-full sm:w-auto px-8 py-3 text-white bg-gray-600 rounded-full cursor-not-allowed text-lg"
            >
              Claimed
            </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Format the date to "Fri Jun 20 2025" for Tanggal Kejadian
      const tanggalKejadian = new Date("<%= report.tanggal_kejadian %>");
      const formattedTanggalKejadian = tanggalKejadian.toDateString(); // This returns the date in "Fri Jun 20 2025" format
      document.getElementById("tanggal-kejadian").textContent =
        formattedTanggalKejadian;

      // Format the date to "Fri Jun 20 2025" for Tanggal Laporan
      const tanggalLaporan = new Date("<%= report.tanggal_laporan %>");
      const formattedTanggalLaporan = tanggalLaporan.toDateString(); // This returns the date in "Fri Jun 20 2025" format
      document.getElementById("tanggal-laporan").textContent =
        formattedTanggalLaporan;
    </script>
  </body>
</html>
