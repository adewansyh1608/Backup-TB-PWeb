<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Akun</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 font-sans flex items-center justify-center min-h-screen">
    <div class="w-full max-w-xl bg-white rounded-lg shadow-lg p-8">
      <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Edit Akun</h2>

      <form action="/edit-akun/<%= akun.email %>" method="POST" class="space-y-4">
        <div>
          <label class="block text-gray-700 font-semibold mb-1">Name</label>
          <input type="text" name="nama" value="<%= akun.nama %>" class="w-full p-3 border border-gray-300 rounded-md" required />
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Email</label>
          <input type="email" value="<%= akun.email %>" class="w-full p-3 bg-gray-200 border border-gray-300 rounded-md" readonly />
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">No. Telp</label>
          <input type="text" name="no_telepon" value="<%= akun.no_telepon %>" class="w-full p-3 border border-gray-300 rounded-md" required />
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Alamat</label>
          <input type="text" name="alamat" value="<%= akun.alamat %>" class="w-full p-3 border border-gray-300 rounded-md" required />
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Role</label>
          <select name="role" class="w-full p-3 border border-gray-300 rounded-md" required>
            <option value="">Select</option>
            <option value="admin" <%= akun.role === "admin" ? "selected" : "" %>>Admin</option>
            <option value="user" <%= akun.role === "user" ? "selected" : "" %>>User</option>
          </select>
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Password</label>
          <div class="flex">
            <input type="password" value="************" disabled class="w-full p-3 border border-gray-300 rounded-l-md bg-gray-100" />
            <button type="button" onclick="bukaModalReset()" class="bg-red-500 hover:bg-red-600 text-white px-4 py-1 rounded-r-md text-sm">
              Reset
            </button>
          </div>
        </div>

        <div class="flex justify-between mt-6">
          <a href="/manajemen-user" class="text-gray-600 font-semibold hover:underline">Back</a>
          <button type="submit" class="bg-green-700 hover:bg-green-800 text-white px-6 py-2 rounded-md font-semibold">
            Update
          </button>
        </div>
      </form>
    </div>

    <!-- MODAL RESET PASSWORD -->
    <div id="modalReset" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
      <div class="bg-white rounded-lg shadow-lg p-6 w-80 text-center">
        <h3 class="text-lg font-bold mb-4">Yakin ingin <span class="text-red-500">Reset Password</span>?</h3>
        <div class="flex justify-center gap-4">
          <button onclick="tutupModalReset()" class="bg-red-600 text-white px-4 py-2 rounded-md font-bold hover:bg-red-700">Tidak</button>
          <form id="resetForm" action="/reset-password/<%= akun.email %>" method="POST">
            <button type="submit" class="bg-sky-500 text-white px-4 py-2 rounded-md font-bold hover:bg-sky-600">Ya</button>
          </form>
        </div>
      </div>
    </div>

    <script>
      function bukaModalReset() {
        document.getElementById("modalReset").classList.remove("hidden");
      }

      function tutupModalReset() {
        document.getElementById("modalReset").classList.add("hidden");
      }
    </script>
  </body>
</html>