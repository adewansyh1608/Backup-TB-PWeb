<!-- views/manajemen-user.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Manajemen User</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/manajemen-user.css" />
  </head>
  <body>
    <div class="layout">
      <%- include('partials/sidebar', { user, activeMenu: 'manajemen-user' }) %>

      <div class="main-content p-6 w-full">
        <h1 class="text-2xl font-semibold mb-4">Manajemen User</h1>

        <!-- Form Search -->
        <form method="GET" action="/manajemen-user" class="mb-4 flex gap-2">
          <input
            type="text"
            name="search"
            placeholder="Cari nama atau email pengguna..."
            value="<%= typeof search !== 'undefined' ? search : '' %>"
            class="border border-gray-300 rounded px-4 py-2 w-1/3"
          />
          <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
            Cari
          </button>
        </form>

        <!-- Tombol Aksi -->
        <div class="flex justify-end mb-4 gap-2">
          <a href="/tambah-akun" class="bg-sky-500 hover:bg-sky-600 text-white px-4 py-2 rounded-md">Tambah Akun</a>
          <a href="/manajemen-user/cetak" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md">Print PDF</a>
        </div>

        <!-- Modal Konfirmasi Hapus -->
        <div id="modalHapus" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
          <div class="bg-white p-6 rounded shadow-md w-80 text-center">
            <p class="font-semibold text-lg mb-4">Yakin ingin hapus akun ini?</p>
            <div class="flex justify-center gap-4">
              <button onclick="tutupModalHapus()" class="bg-blue-400 hover:bg-gray-blue text-white px-4 py-2 rounded">Tidak</button>
              <form id="formHapus" method="POST">
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">Ya</button>
              </form>
            </div>
          </div>
        </div>

        <!-- Tabel -->
        <div class="overflow-x-auto">
          <table class="min-w-full table-auto bg-white rounded-md overflow-hidden shadow-md">
            <thead class="bg-gray-200">
              <tr>
                <th class="px-4 py-2 text-left">Email</th>
                <th class="px-4 py-2 text-left">Nama</th>
                <th class="px-4 py-2 text-left">No Telepon</th>
                <th class="px-4 py-2 text-left">Role</th>
                <th class="px-4 py-2 text-left">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (users.length > 0) { %>
                <% users.forEach(user => { %>
                  <tr class="border-t">
                    <td class="px-4 py-2"><%= user.email %></td>
                    <td class="px-4 py-2"><%= user.nama %></td>
                    <td class="px-4 py-2"><%= user.no_telepon %></td>
                    <td class="px-4 py-2"><%= user.role %></td>
                    <td class="px-4 py-2 space-x-2">
                      <a href="/edit-akun/<%= user.email %>" class="bg-purple-500 hover:bg-purple-600 text-white px-3 py-1 rounded">Edit</a>
                      <button onclick="bukaModalHapus('<%= user.email %>')" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded">Hapus</button>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="text-center py-6 text-gray-500">Akun tidak ditemukan</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script>
      function bukaModalHapus(email) {
        const form = document.getElementById('formHapus');
        form.action = `/hapus-akun/${email}`;
        document.getElementById('modalHapus').classList.remove('hidden');
      }

      function tutupModalHapus() {
        document.getElementById('modalHapus').classList.add('hidden');
      }
    </script>
  </body>
</html>