<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Laporan Saya yang Diklaim</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/dashboard.css" />
</head>
<body class="bg-gray-100 min-h-screen">
  <div class="flex">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="flex-1 p-8">
      <h1 class="text-3xl font-bold mb-8 text-center text-green-400">Laporan Saya Klaim</h1>

      <% if (reports.length === 0) { %>
        <div class="text-center py-12">
          <p class="text-gray-600 text-lg">Belum ada laporan yang Anda klaim.</p>
        </div>
      <% } else { %>
        <div class="space-y-6">
          <% reports.forEach((report, index) => { %>
            <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
              <div class="flex items-start justify-between">
                
                <!-- Foto Barang -->
                <div class="flex-shrink-0 mr-6">
                  <% if (report.foto_barang) { %>
                    <img src="/<%= report.foto_barang %>" alt="Foto Barang" class="w-32 h-24 object-cover rounded-lg border">
                  <% } else { %>
                    <div class="w-32 h-24 bg-gray-100 rounded-lg border-2 border-dashed border-gray-300 flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  <% } %>
                </div>

                <!-- Detail Laporan -->
                <div class="flex-1">
                  <div class="flex justify-between items-start mb-4">
                    <h3 class="text-xl font-semibold text-gray-900"><%= report.nama_barang %></h3>
                    <span class="<%= report.status === 'Claimed' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %> text-xs font-medium px-2.5 py-0.5 rounded">
                      <%= report.status %>
                    </span>
                  </div>

                  <div class="text-sm text-gray-600 space-y-1 mb-4">
                    <p>Jenis Laporan: <span class="font-medium"><%= report.jenis_laporan %></span></p>
                    <p>Tanggal Kejadian: <span class="font-medium"><%= new Date(report.tanggal_kejadian).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span></p>
                    <p>Lokasi: <span class="font-medium"><%= report.lokasi %></span></p>
                    <p>Deskripsi: <span class="font-medium"><%= report.deskripsi %></span></p>
                    <p>No HP: <span class="font-medium"><%= report.nohp_penemu_penerima || '-' %></span></p>
                  </div>

<!-- Tombol -->
<div class="flex flex-wrap justify-between items-end mt-4">
  <div class="flex space-x-3">
    <!-- Tombol Batalkan Klaim -->
    <button 
  onclick="cancelClaim(this)" 
  data-id="<%= report.id_laporan %>" 
  class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded text-sm font-medium transition-colors">
  Batalkan Klaim
</button>


    <!-- Tombol Lihat Detail -->
    <a href="/detail/<%= report.id_laporan %>" class="bg-gray-800 hover:bg-gray-900 text-white px-4 py-2 rounded text-sm font-medium transition-colors">
      Lihat Detail
    </a>
  </div>

  <!-- Tombol Buat Laporan Selesai -->
  <button class="mt-4 md:mt-0 bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded text-sm font-medium transition-colors">
    Buat Laporan Selesai
  </button>
</div>

                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <script>
  function cancelClaim(button) {
    const id = button.getAttribute('data-id');

    fetch(`/unclaim/${id}`, {
      method: 'POST'
    })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          window.location.reload();
        }
      })
      .catch(err => console.error('Gagal membatalkan klaim:', err));
  }
</script>

</body>
</html>