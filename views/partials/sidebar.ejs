<aside class="sidebar w-64 bg-gray-800 text-white p-6 h-screen">
  <!-- User Info -->
  <div class="user-info flex flex-col items-center mb-8 text-center">
    <img
      src="<%= user.foto_profile ? '/' + user.foto_profile : '/images/user_icon.png' %>"
      alt="User Icon"
      class="w-16 h-16 rounded-full object-cover mb-2"
    />
    <div class="leading-tight">
      <a
        href="/profile"
        class="text-base font-semibold hover:text-gray-300 block truncate max-w-[160px]"
      >
        Hi, <%= user.nama %>
      </a>
    </div>
  </div>

  <!-- Navigation Menu -->
  <nav class="menu space-y-4">
    <a
      href="/dashboard"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'dashboard' ? 'bg-green-600' : '' %>"
    >
      Beranda
    </a>

    <a
      href="/my-report"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'my-report' ? 'bg-green-600' : '' %>"
    >
      Laporan Saya
    </a>

    <a
      href="/laporan-sayaclaim"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'laporan-sayaclaim' ? 'bg-green-600' : '' %>"
    >
      Laporan Saya Claim
    </a>

    <a
      href="/statistik-laporan"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'statistik-laporan' ? 'bg-green-600' : '' %>"
    >
      Statistik Laporan Saya
    </a>

    <a
      href="/riwayat-saya"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'riwayat-saya' ? 'bg-green-600' : '' %>"
    >
      Riwayat Saya
    </a>

    <a
      href="/bookmark"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'bookmark' ? 'bg-green-600' : '' %>"
    >
      Laporan Disimpan
    </a>

    <a
      href="/saran"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'saran' ? 'bg-green-600' : '' %>"
    >
      Saran
    </a>

    <% if (user.role === 'admin') { %>
    <div class="menu-separator my-4 border-t border-gray-600"></div>

    <div class="dropdown relative">
      <a
        href="#"
        class="dropdown-toggle block py-2 px-4 rounded hover:bg-gray-700 flex justify-between items-center"
      >
        Verifikasi Laporan
        <span class="arrow text-gray-400">&#9660;</span>
      </a>
      <div
        class="dropdown-menu absolute left-0 bg-gray-700 text-white w-full rounded shadow-lg mt-2 hidden"
      >
        <a
          href="/confirm-post"
          class="block py-2 px-4 hover:bg-gray-600 <%= activeMenu === 'confirm-post' ? 'bg-green-600' : '' %>"
        >
          Verifikasi Upload Laporan
        </a>
        <a
          href="/confirm-done"
          class="block py-2 px-4 hover:bg-gray-600 <%= activeMenu === 'confirm-done' ? 'bg-green-600' : '' %>"
        >
          Verifikasi Laporan Selesai
        </a>
      </div>
    </div>

    <a
      href="/statistik-laporanadmin"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'statistik-laporanadmin' ? 'bg-green-600' : '' %>"
    >
      Statistik Laporan
    </a>

    <a
      href="/arsip-laporan"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'arsip-laporan' ? 'bg-green-600' : '' %>"
    >
      Manajemen Laporan
    </a>

    <a
      href="/manajemen-user"
      class="block py-2 px-4 rounded hover:bg-gray-700 <%= activeMenu === 'manajemen-user' ? 'bg-green-600' : '' %>"
    >
      Management User
    </a>
    <% } %>
  </nav>
</aside>

<script>
  // Ensure the dropdown toggles visibility on click
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".dropdown-toggle").forEach((dropdown) => {
      dropdown.addEventListener("click", function () {
        const menu = this.nextElementSibling;
        menu.classList.toggle("hidden");
      });
    });
  });
</script>
