<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Riwayat Saya</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <style>
    html, body { height: 100%; margin: 0; }
    .sidebar { height: 100vh; position: fixed; width: 250px; }
    .main-content {
      margin-left: 250px;
      height: 100vh;
      overflow: auto;
    }
  </style>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="flex">
    <%- include('partials/sidebar') %>

    <div class="main-content flex-1 p-6 md:p-8">
      <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-8 text-center text-[#007A33]">
          Riwayat Saya
        </h1>

        <% if (riwayat.length === 0) { %>
          <div class="text-center py-12">
            <p class="text-gray-600 text-lg">Belum ada riwayat aktivitas.</p>
          </div>
        <% } else { %>
          <!-- Flex container untuk card -->
          <div class="flex flex-wrap gap-6">
            <% riwayat.forEach(item => { %>
              <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 hover:shadow-lg transition duration-200
                          w-full sm:w-[48%] lg:w-[31%]">
                <div class="flex items-start">
                  <div class="flex-shrink-0 mr-4">
                    <!-- Icon berdasarkan jenis aktivitas -->
                    <% if (item.deskripsi_aktivitas.includes('Membuat laporan')) { %>
                      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      </div>
                    <% } else if (item.deskripsi_aktivitas.includes('Mengklaim')) { %>
                      <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                    <% } else if (item.deskripsi_aktivitas.includes('Membuat laporan selesai')) { %>
                      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M5 13l4 4L19 7" />
                        </svg>
                      </div>
                      <% } else if (item.deskripsi_aktivitas.includes('Membatalkan klaim')) { %>
                        <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </div>
                    <% } else { %>
                      <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                    <% } %>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 mb-1">
                      <%= item.deskripsi_aktivitas %>
                    </h3>
                    <p class="text-sm text-gray-600">
                      <%= new Date(item.tanggal_aktivitas).toLocaleDateString('id-ID', {
                        weekday: 'long', year: 'numeric', month: 'long', day: 'numeric',
                      }) %>
                    </p>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>

          <!-- Tombol Print -->
          <div class="mt-10 text-right">
            <button onclick="printRiwayat()"
                    class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg font-medium transition duration-200">
              Print All
            </button>
          </div>

          <!-- Tabel untuk export PDF -->
          <table id="riwayatTable" class="hidden">
            <thead><tr><th>ID</th><th>Email</th><th>Deskripsi</th><th>Tanggal</th></tr></thead>
            <tbody>
              <% riwayat.forEach(item => { %>
                <tr>
                  <td><%= item.id_riwayat %></td>
                  <td><%= item.email %></td>
                  <td><%= item.deskripsi_aktivitas %></td>
                  <td><%= new Date(item.tanggal_aktivitas).toLocaleDateString('id-ID') %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>
  <script>
    async function printRiwayat() {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF();
      const table = document.getElementById("riwayatTable");
      const rows = Array.from(table.querySelectorAll("tbody tr")).map(r =>
        Array.from(r.querySelectorAll("td")).map(c => c.innerText)
      );
      doc.autoTable({
        head: [['ID', 'Email', 'Deskripsi', 'Tanggal']],
        body: rows, styles: { fontSize: 10 },
        headStyles: { fillColor: [220, 53, 69] }, margin: { top: 20 }
      });
      doc.save("riwayat_saya.pdf");
    }
  </script>
</body>
</html>